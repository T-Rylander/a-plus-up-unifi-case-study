# ==============================================================================
# PROVIDER CONFIGURATION (Update for your UDM IP)
# ==============================================================================

unifi_api_url     = "https://192.168.1.1:8443"  # UDM Pro Max IP
unifi_username    = "ubnt"                       # Default username
unifi_password    = "your-real-unifi-password"  # CHANGE THIS! Must match UniFi admin password
unifi_site_name   = "default"                    # UniFi site name

# ==============================================================================
# VLAN SUBNET CONFIGURATION (Customize for your network)
# ==============================================================================

# VLAN 10: Students
vlan_students_subnet      = "10.10.0.0/16"
vlan_students_dhcp_start  = "10.10.1.100"
vlan_students_dhcp_stop   = "10.10.1.200"

# VLAN 20: Staff
vlan_staff_subnet      = "10.20.0.0/16"
vlan_staff_dhcp_start  = "10.20.1.100"
vlan_staff_dhcp_stop   = "10.20.1.200"

# VLAN 30: Guests (Isolated)
vlan_guests_subnet      = "10.30.0.0/16"
vlan_guests_dhcp_start  = "10.30.1.100"
vlan_guests_dhcp_stop   = "10.30.1.200"

# VLAN 50: VoIP (Yealink Phones)
vlan_voip_subnet      = "10.50.0.0/16"
vlan_voip_dhcp_start  = "10.50.1.100"
vlan_voip_dhcp_stop   = "10.50.1.200"

# VLAN 60: Cameras (Verkada)
vlan_cameras_subnet      = "10.60.0.0/16"
vlan_cameras_dhcp_start  = "10.60.1.100"
vlan_cameras_dhcp_stop   = "10.60.1.200"

# VLAN 99: Printers (mDNS reflector target)
vlan_printers_subnet      = "10.99.0.0/16"
vlan_printers_dhcp_start  = "10.99.1.100"
vlan_printers_dhcp_stop   = "10.99.1.200"

# ==============================================================================
# DHCP CONFIGURATION
# ==============================================================================

dhcp_lease_time        = 3600   # 1 hour standard lease
dhcp_lease_time_guests = 1800   # 30 min for guests (shorter)

# ==============================================================================
# WIRELESS NETWORK PASSWORDS (CHANGE THESE!)
# ==============================================================================
# WARNING: These must be STRONG passwords (20+ chars, mixed complexity)
# DO NOT reuse WiFi passwords from other networks

wifi_students_password = "your-strong-students-password-20-chars-minimum"
wifi_staff_password    = "your-strong-staff-password-20-chars-minimum"
wifi_guest_password    = "your-strong-guest-password-20-chars-minimum"

# ==============================================================================
# DEPLOYMENT ENVIRONMENT
# ==============================================================================

environment = "prod"  # Options: dev, staging, prod

# ==============================================================================
# USAGE INSTRUCTIONS
# ==============================================================================
#
# 1. Copy this file:
#    $ cp terraform.tfvars.example terraform.tfvars
#
# 2. Edit terraform.tfvars with YOUR actual values:
#    - UniFi admin password
#    - VLAN subnets (if different from defaults)
#    - WiFi passwords (STRONG, unique)
#    - Environment (dev/staging/prod)
#
# 3. Plan deployment:
#    $ terraform init
#    $ terraform plan
#    $ terraform apply -auto-approve  # CAUTION: modifies UDM!
#
# 4. Verify:
#    $ terraform show  # Display current state
#    $ unifi-api query vlan  # Verify via UniFi API
#
# 5. Destroy (if reverting):
#    $ terraform destroy  # CAUTION: removes all Terraform-managed resources!
#
# ==============================================================================
